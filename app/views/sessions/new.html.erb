<%= turbo_frame_tag "authentication" do %>
  <div class="w-full max-w-md mx-auto p-6">
    <div class="p-4 sm:p-7 shadow-md">
      <div class="text-center">
        <h1 class="block text-2xl font-bold text-gray-800 dark:text-white">Sign in</h1>
        <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
          Don't have an account yet?
          <%= link_to('Sign up here', signup_path, class: "text-blue-600 decoration-2 hover:underline font-medium dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600") %>
        </p>
      </div>

      <div class="mt-5">
        <%= form_with(scope: :sessions, url: login_path, method: :post, data: {turbo: false}) do |f| %>
          <div class="grid gap-y-4">
            <div>
              <%= f.label :email, "Email address", class: "block text-sm mb-2 dark:text-white" %>
              <div class="relative">
                <%= f.text_field :email, class: "py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-slate-900 dark:border-gray-700 dark:text-gray-400 dark:focus:ring-gray-600", required: true%>
              </div>
            </div>
            <%= f.submit 'Sign in', class: "w-full py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-blue-600 text-white hover:bg-blue-700 disabled:opacity-50 disabled:pointer-events-none dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>